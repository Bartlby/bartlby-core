{
  "name": "Bartlby",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Quick View for Bartlby",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/",
    "notifications"
  ],
   "web_accessible_resources": [
    "icon.png"
  ],
  "background": {
    "scripts": ["btl-event.js"],
    "persistent": false
  },
  "options_page": "options.html"
}